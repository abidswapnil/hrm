<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Offices" %>

  <div class="flex justify-between items-center">
    <h1 class="font-semibold text-4xl ">Offices</h1>
    <%= link_to "New office", new_office_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="staffs" class="min-w-full">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-3">
      <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600">
          <th scope="col" class="px-6 py-3">Name</th>
          <th scope="col" class="px-6 py-3">Category</th>
          <th scope="col" class="px-6 py-3">Division</th>
          <th scope="col" class="px-6 py-3">District</th>
          <th scope="col" class="px-6 py-3">Address</th>
          <th scope="col" class="px-6 py-3">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @offices.each do |office| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
            <td class="px-6 py-4"><%= office.name %></td>
            <td class="px-6 py-4"><%= office.category %></td>
            <td class="px-6 py-4"><%= office.division %></td>
            <td class="px-6 py-4"><%= office.district %></td>
            <td class="px-6 py-4"><%= office.address %></td>
            <td class="px-6 py-4"><%= link_to "Show this staff", office, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
